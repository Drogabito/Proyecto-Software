<!--CSS para los objetos que se iran agregando----------------------------------------------------------------------------------------------------------------------------------------------------------------->

<style>
    li { margin: 5px; padding: 5px; width: 150px; }
</style>

<!--SCRIPT para los sortables(objetos que se pueden ordenar dinamicamente)-------------------------------------------------------------------------->

<script>
    $(function() {

        /******************************************************************************/
        //Funcion para que la primera columna sea sortable*/
        $( '#sortable1' ).sortable({
            cursor: "move",
            scroll: true
        });

        //Funcion para que la primera columna guarde su estado actual*/
        $('#sortable1').on('sortupdate', function(event, ui) {
            var order1 = $(this).sortable('toArray').toString(); //esto permite guardar el orden actual en un arreglo
            $("#printeo1").text (order1);
        });

        //Funcion para poder eliminar los elementos de la columna1*/
        $("#sortable1").on('click', '.delete', function () {
            $(this).parent().remove();
            $('#sortable1').trigger('sortupdate');
        });

        //Funcion para que al apretar el botoncito1 de la columna 1 se agregue otro elemento*/
        $("#botoncito1").on('click',function () {
            var texto = document.getElementById("moduloEscogido1").value;
            var li = "<li class='ui-state-default' id="+ texto +">" + texto + "<br><button class='delete'>Borrar</button></li>"
            $('#sortable1').append(li);
            $('#sortable1').trigger('sortupdate');
        });
        /******************************************************************************/

        //Funcion para que la segunda columna sea sortable*/
        $( '#sortable2' ).sortable({
            cursor: "move",
            scroll: true
        });

        //Funcion para que la primera columna guarde su estado actual*/
        $('#sortable2').on('sortupdate', function(event, ui) {
            var order2 = $(this).sortable('toArray').toString(); //esto permite guardar el orden actual en un arreglo
            $("#printeo2").text (order2);
        });

        //Funcion para poder eliminar los elementos de la columna1*/
        $("#sortable2").on('click', '.delete', function () {
            $(this).parent().remove();
            $('#sortable2').trigger('sortupdate');
        });

        //Funcion para que al apretar el botoncito1 de la columna 1 se agregue otro elemento*/
        $("#botoncito2").on('click',function () {
            var texto = document.getElementById("moduloEscogido2").value;
            var li = "<li class='ui-state-default' id="+ texto +">" + texto + "<br><button class='delete'>Borrar</button></li>"
            $('#sortable2').append(li);
            $('#sortable2').trigger('sortupdate');
        });

        /******************************************************************************/

        //Funcion para que la tercera columna sea sortable*/
        $( '#sortable3' ).sortable({
            cursor: "move",
            scroll: true
        });

        //Funcion para que la primera columna guarde su estado actual*/
        $('#sortable3').on('sortupdate', function(event, ui) {
            var order3 = $(this).sortable('toArray').toString(); //esto permite guardar el orden actual en un arreglo
            $("#printeo3").text (order3);
        });
        //Funcion para poder eliminar los elementos de la columna1*/
        $("#sortable3").on('click', '.delete', function () {
            $(this).parent().remove();
            $('#sortable3').trigger('sortupdate');
        });
        //Funcion para que al apretar el botoncito1 de la columna 1 se agregue otro elemento*/
        $("#botoncito3").on('click',function () {
            var texto = document.getElementById("moduloEscogido3").value;
            var li = "<li class='ui-state-default' id="+ texto +">" + texto + "<br><button class='delete'>Borrar</button></li>"
            $('#sortable3').append(li);
            $('#sortable3').trigger('sortupdate');
        });

    });

</script>
