<%include layout%>

<div class="container">

    <div class="col-sm-6 col-sm-offset-3">

        <h1><span class="fa fa-sign-in"></span> Agregar Alumno</h1>

        <!-- show any messages that come back with authentication -->
        <% if (messages.length > 0){%>
        <% for(var i=0;i<messages.length;i++){%>
        <div class="alert alert-danger fade in" data-dismiss="alert" aria-label="close"> <%= messages[i] %> <button class="close">&times</button></div>
        <% } %>
        <% } %>
        <% if (exito.length > 0){%>
        <% for(var i=0;i<exito.length;i++){%>
        <div class="alert alert-success fade in" data-dismiss="alert" aria-label="close"> <%= exito[i] %> <button class="close">&times</button></div>
        <% } %>
        <% } %>


        <!-- LOGIN FORM -->
        <form action="/signup" method="post">
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" class="form-control" name="username" placeholder="Nombre" required>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="email" placeholder="ejemplo@ejemplo.com" required>
            </div>
            <div class="form-group">
                <label>Rol</label>
                <input type="number" class="form-control" name="rol" placeholder="123456789 (Sin dígito verificador)" required>
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input type="password" class="form-control" name="password" placeholder="Contraseña (Mínimo 4 carácteres)" required>
            </div>

            <button type="submit" class="btn btn-info">Agregar</button>
        </form>
    </div>

</div>
