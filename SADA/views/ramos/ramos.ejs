<%include ../layout %>
<%include ../nav %>

<script src="../../angular/ngApp.js"></script>
<script src="../../angular/controllers/ramos.js"></script>

<div class="menu container" ng-app="ngApp">
  <div ng-controller="ngRamos as ramos">
    <div class="row">

      <section class="col-sm-4 ramos">
        <%for(var i=0;i<rows.length;i++){%>
          <form action="/ramos/u" method="post">
            <input type="hidden" value=<%=rows[i].Sigla%> name="ramo_sigla">
            <input type="hidden" value=<%=rows[i].idRamo%> name="ramo_id">
            <button type="submit"><%= rows[i].Nombre%></button>
          </form>
        <%}%>
      </section>

      <section class="col-sm-6 col-sm-offset-1 ramos-img">
        <%if(user.perfil_idperfil==1){%>
          <img src="../../img/adaptador.jpg" alt="">
        <%}else if(user.perfil_idperfil==2){%>
          <img src="../../img/divergente.jpg" alt="">
        <%}else if(user.perfil_idperfil==3){%>
          <img src="../../img/convergente.jpg" alt="">
        <%}else if(user.perfil_idperfil==4){%>
          <img src="../../img/asimilador.jpg" alt="">
        <%}%>
      </section>

    </div> <!-- end row -->
  </div>
</div>

<% include ../footer %>
