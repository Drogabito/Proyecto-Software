<%include ../layout %>
<%include ../nav%>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

<div class="container menu">
  <div class="row">

    <form action="/editModulo" method="post">
      <div class="col-md-3">
        <h4>Selecciona el tipo de formato del módulo</h4>
        <p><input type="radio" name="tipo" value="texto" <%if (moduloObjetivo[0].Tipo == "texto") {%>checked<%}%>> Texto</p>
        <p><input type="radio" name="tipo" value="video" <%if (moduloObjetivo[0].Tipo == "video") {%>checked<%}%>> Link a Video</p>
        <p><input type="radio" name="tipo" value="imagen" <%if (moduloObjetivo[0].Tipo == "imagen") {%>checked<%}%>> Link a Imagen</p>
        <br>
        <input type="hidden" name="modulo_id" value=<%=moduloObjetivo[0].idModulo%>>
        <input type="hidden" value=<%=unidad_id%> name="unidad_id">
        <input type="hidden" value=<%=unidad_nombre%> name="unidad_nombre">
        <button type="submit" id='enviar' class="btn btn-default">Guardar cambios</button>
      </div>
      <div class="col-md-4">
        Estás en la unidad <label><%=unidad_nombre%></label>
        <textarea rows="8" cols="40" type="text" name="contenido" id="contenido" placeholder="Escriba acá el contenido del módulo..." required><%=moduloObjetivo[0].Informacion%></textarea>
      </div>
    </form><!-- Guardar cambios -->

    <form action="/borrarModulo" method= "post" onsubmit="return confirm('¿Seguro que quieres borrar este módulo?');">
      <input type="hidden" name="modulo_id" value=<%=moduloObjetivo[0].idModulo%>>
      <input type="hidden" value=<%=unidad_id%> name="unidad_id">
      <input type="hidden" value=<%=unidad_nombre%> name="unidad_nombre">
      <button type="submit" id='enviar' class="btn btn-default">Borrar Modulo</button>
    </form><!-- borrar modulo -->

    <div class="row col-md-3">
      <form action="/adm_plantilla" method="post">
        <input type="hidden" value=<%=unidad_id%> name="unidad_id">
        <input type="hidden" value=<%=unidad_nombre%> name="unidad_nombre">
        <button type="submit" class="btn btn-default"> Volver</button>
      </form><!-- volver atrás -->
    </div>


  </div>

</div>

<% include ../footer %>
