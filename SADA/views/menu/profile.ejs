<%include ../layout %>
<%include ../nav %>

<div class="container menu">

  <div class="row">

    <div class="col-sm-4">
      <div class="page-header text-center">
          <h2><i class="fa fa-cog" aria-hidden="true"></i> Información de Perfil</h2>
      </div>
        <h2><span class="fa fa-user"></span> <%= user.Nombre %></h2>

          <h5><strong>RUT</strong>: <%= user.Rut %></h5>
          <%if (user.Rol!=null) { %>
          <h5><strong>Rol</strong>: <%= user.Rol %></h5>
          <%}%>
          <h5><strong>Email</strong>: <%= user.Correo %></h5>
          <a href="/change_pass"><button class="btn btn-warning"><h5>Cambiar Contraseña</h5></button></a>

    </div>

    <section class="col-sm-6 col-sm-offset-1 ramos-img">
      <%if(user.Admin==1){%>
        <img src="http://adminweapon.com/wp-content/uploads/2012/06/logo-admin-weapon.jpg" alt="">
      <%}else if(user.Profesor==1){%>
        <img src="http://www.eldinamo.cl/wp-content/uploads/2016/10/profesor-574x238.jpg" alt="">
      <%}else if(user.perfil_idperfil==1){%>
        <img src="../../img/adaptador.jpg" alt="">
      <%}else if(user.perfil_idperfil==2){%>
        <img src="../../img/divergente.jpg" alt="">
      <%}else if(user.perfil_idperfil==3){%>
        <img src="../../img/convergente.jpg" alt="">
      <%}else if(user.perfil_idperfil==4){%>
        <img src="../../img/asimilador.jpg" alt="">
      <%}%>
    </section>

  </div><!-- end row -->

</div>

<% include ../footer %>
