<%include ../layout %>
<%include ../nav %>

<style type="text/css">
#prueba
{
    <%if(user.Admin==1){%>
      background: url('http://adminweapon.com/wp-content/uploads/2012/06/logo-admin-weapon.jpg');
    <%}else if(user.Profesor==1){%>
      background: url('http://www.eldinamo.cl/wp-content/uploads/2016/10/profesor-574x238.jpg');
    <%}else if(user.perfil_idperfil!=1){%>
      background: url('../../img/adaptador.jpg');
    <%}else if(user.perfil_idperfil!=2){%>
      background: url('../../img/divergente.jpg');
    <%}else if(user.perfil_idperfil!=3){%>
      background: url('../../img/convergente.jpg');
    <%}else if(user.perfil_idperfil!=4){%>
      background: url('../../img/asimilador.jpg');
    <%}%>
}
</style>


<div class="container menu">



    <div class="page-header text-center">

        <h1><i class="fa fa-cog" aria-hidden="true"></i> Información de Perfil</h1>
    </div>

    <div class="row" id="prueba">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6" id="profile-info">
            <div class="well">
                <h3><span class="fa fa-user"></span> <%= user.Nombre %><br> </h3>

                <p>
                    <strong>RUT</strong>: <%= user.Rut %><br>
                    <%if (user.Rol!=null) { %>
                    <strong>Rol</strong>: <%= user.Rol %><br>
                    <%}%>
                    <strong>Email</strong>: <%= user.Correo %><br>
                    <br>
                    <a href="/change_pass"><button class="btn btn-warning">Cambiar Contraseña</button></a>
                </p>

            </div>
        </div><!-- LOCAL INFORMATION -->
    </div>
</div>

<% include ../footer %>
